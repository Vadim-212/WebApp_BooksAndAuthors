@{
    ViewBag.Title = "Index";
}

@model IEnumerable<WebApplication1.Models.BookModel>

<h2>Книги</h2>

<div id="books-list">
    <div>
        @*@Html.ActionLink("Создать","Create")*@
        @Html.ActionLink("Создать","CreateEdit")
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Author</th>
                <th>Title</th>
                <th>Genre</th>
                <th>Pages</th>
                <th>Price</th>
                <td></td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.AuthorName</td>
                    <td>@item.Title</td>
                    <td>@item.GenreName</td>
                    <td>@item.Pages</td>
                    <td>@item.Price</td>
                    <td>@*@Html.ActionLink("Редактировать","Edit", new { id = item.Id }, null)*@</td>
                    <td>@Html.ActionLink("Редактировать", "CreateEdit", new { id = item.Id }, null)</td>
                    <td>@Html.ActionLink("Удалить", "Delete", new { id = item.Id })</td>
                </tr>
            }
        </tbody>
    </table>
</div>
