@model IEnumerable<WebApplication1.Models.AuthorModel>
@{
    ViewBag.Title = "Index";
}

<h2>Авторы</h2>

<div id="authors-list">
    <div>
        @*@Html.ActionLink("Создать", "Create")*@
        @Html.ActionLink("Создать", "CreateEdit")
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    @*<td>@Html.ActionLink("Редактировать","Edit", new { id = item.Id }, null)</td>*@
                    <td>@Html.ActionLink("Редактировать","CreateEdit", new { id = item.Id }, null)</td>
                    <td>@Html.ActionLink("Удалить", "Delete", new { id = item.Id }, null)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    @Html.Partial("Partial/_TopAuthorsPartialView")
</div>
